                    <input class="form-control" id="number1FB" type="number" placeholder="Enter a number" onchange="enableDisableButtonsFB()" />
                    <input class="form-control" id="number2FB" type="number" placeholder="Enter a number" onchange="enableDisableButtonsFB()" />
                    <hr />
                    <button class="btn btn-default" id="btnFizzBuzz" onclick="processFizzBuzz()" style="margin-top:0px" disabled>Fizz...Buzz!</button>
                    <button class="btn btn-default" id="clearResetFB" onclick="clearResetFB()">Clear/Reset</button>
                    <hr />
                    <label>Result:</label>
                    <div id="fizzBuzzResult" style="margin:10px 10px">&nbsp;</div>

                    <div style="border:4px double #009999; margin-top:20px">
                        <pre class="brush: js">
                        /** Write a program that accepts two numbers between 1 and 100 from the user. 
                            The program then iterates through all numbers from 1 to 100, printing numbers in ascending order to the screen. 
                            For each number that is a multiple of the first number input by the user, print "Fizz" instead of the number. 
                            For each number that is a multiple of the second number input by the user, print "Buzz" instead of the number. 
                            For numbers that are multiples of both numbers, print "FizzBuzz" instead of the number. **/

                        // Enable / Disable buttons depending upon whether user has entered appropriate values into both required input fields.
                        function enableDisableButtonsFB() {
                            if (document.getElementById("number1FB").value === "" ||
                                document.getElementById("number2FB").value === "" ||
                                Number(document.getElementById("number1FB").value) < 1 || Number(document.getElementById("number1FB").value) > 100 ||
                                Number(document.getElementById("number2FB").value) < 1 || Number(document.getElementById("number2FB").value) > 100) {
                                document.getElementById("btnFizzBuzz").disabled = true;
                            } else {
                                document.getElementById("btnFizzBuzz").disabled = false;
                            }
                        }

                        // Identify numbers which qualify as 'Fizz', 'Buzz', or 'FizzBuzz' numbers.
                        function processFizzBuzz() {

                            // Retrieve user's numbers.
                            var number1 = Number(document.getElementById("number1FB").value);
                            var number2 = Number(document.getElementById("number2FB").value);

                            // Establish variables.
                            var outputElement = "";
                            var fbElement;
                            var resultOutput = "";

                            // Test user's numbers.
                            for (var i = 1; i <= 100; i++) {

                                // Reset fizz/buzz identifier.
                                fbElement = false;

                                // Determine whether current number is a multiple of the user's first number.
                                if (!(i % number1)) {
                                    // Set output.
                                    outputElement = "Fizz";
                                    // Identify as f/b.
                                    fbElement = true;
                                }
                                // Determine whether current number is a multiple of the user's second number.
                                if (!(i % number2)) {
                                    // Set output.
                                    outputElement = "Buzz";
                                    // Identify as f/b.
                                    fbElement = true;
                                }
                                // Determine whether current number is a multiple of both of the user's numbers.
                                if (!(i % number1) && !(i % number2)) {
                                    // Set output.
                                    outputElement = "FizzBuzz";
                                    // Identify as f/b.
                                    fbElement = true;
                                }
                                // Determine whether current number has been identified as a f/b element.
                                if (!fbElement) {
                                    // Set output.
                                    outputElement = i;
                                }

                                // Insert spacing as appropriate.
                                if (i !== 100) {
                                    outputElement += ", ";
                                }

                                // Build result string.
                                resultOutput += outputElement;
                            }

                            // Display result to user.
                            document.getElementById("fizzBuzzResult").innerHTML = resultOutput;
                        }

                        // Reset the page.
                        function clearResetFB() {
                            document.getElementById("btnFizzBuzz").disabled = true;

                            document.getElementById("number1FB").value = "";
                            document.getElementById("number2FB").value = "";

                            document.getElementById("fizzBuzzResult").innerHTML = "&nbsp;";
                        }
                    </pre>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
