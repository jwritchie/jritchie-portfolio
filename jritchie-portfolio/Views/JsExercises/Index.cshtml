<!-- Begin Palindrome Modal -->
<div id="palindromeModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Palindrome Finder</h4>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <input class="form-control" id="wordToTest" type="text" placeholder="Enter a word/phrase to test" onchange="enableDisableButtonsPalindrome()" />
                    <hr />
                    <button class="btn btn-default" id="btnPalindrome" onclick="determinePalindrome()" style="margin-top:0px" disabled>Test word/phrase</button>
                    <button class="btn btn-default" id="clearResetPalindrome" onclick="clearResetPalindrome()">Clear/Reset</button>
                    <hr />
                    <label>Result:</label>
                    <div id="palindromeResult">&nbsp;</div>

                    <div style="border:4px double #009999; margin-top:20px">
                       <pre class="brush: js">
                            /** Write a program that determines whether a word is a Palindrome (the same backward as it is forward – “radar” for example). 
                                Display the result to the user.
                                Examples: 'radar', 'Was it a car or a cat I saw?' **/
                                
                                // Enable / Disable button depending upon whether user has entered a value into required input field.
                                function enableDisableButtonsPalindrome() {
                                    if (document.getElementById("wordToTest").value == "") {
                                        document.getElementById("btnPalindrome").disabled = true;
                                    } else {
                                        document.getElementById("btnPalindrome").disabled = false;
                                    }
                                }

                                // Determine whether user's word is a Palindrome.
                                function determinePalindrome() {

                                    // Retrieve input value.
                                    var inputValue = document.getElementById("wordToTest").value;

                                    // Filter out non-valid characters & convert to lowercase.
                                    var wordToTest = inputValue.replace(/[^A-Za-z0-9]/gi, "").toLowerCase();
      
                                    // Establish variables.
                                    var lengthOfWord = wordToTest.length;
                                    var maxCharsToTest = parseInt(lengthOfWord / 2);
                                    var isPalindrome = true;
                                    var testUp = "";
                                    var testDown = "";
                                    var resultMessage = "";

                                    // Clear result.
                                    document.getElementById("palindromeResult").innerHTML = "";

                                    // Test letters in the word, comparing first 'half' (testUp) of the word against the last 'half' (testDown).
                                    for (var i = 0; i < maxCharsToTest; i++) {
                                        testUp = wordToTest.charAt(i);
                                        testDown = wordToTest.charAt(lengthOfWord - i - 1);

                                        // If any character comparision is false, the word is not a palindrome.
                                        if (testUp !== testDown) {
                                            isPalindrome = false;
                                        }
                                    }

                                    // Display result to user.
                                    if (!isPalindrome) {
                                        resultMessage = "The word/phrase \'" + inputValue + "'\ is NOT a Palindrome.";
                                    } else {
                                        resultMessage = "The word/phrase \'" + inputValue + "'\ IS a Palindrome!";
                                    }
                                    document.getElementById("palindromeResult").innerHTML = resultMessage;
                                }

                                // Reset the page.
                                function clearResetPalindrome() {
                                    document.getElementById("btnPalindrome").disabled = true;
                                    document.getElementById("wordToTest").value = "";
                                    document.getElementById("palindromeResult").innerHTML = "&nbsp;";
                                }
                        </pre>
                    </div>
                </div >
