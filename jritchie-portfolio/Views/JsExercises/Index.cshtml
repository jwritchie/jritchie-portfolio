                    <hr />
                    <button class="btn btn-default" id="btnFactorial" onclick="determineFactorial()" style="margin-top:0px" disabled>Calculate Factorial</button>
                    <button class="btn btn-default" id="clearResetFactorial" onclick="clearResetFactorial()">Clear/Reset</button>
                    <hr />
                    <label>Result:</label>
                    <div id="factorialResult">&nbsp;</div>
                    <div style="border:4px double #009999; margin-top:20px">
                        <pre class="brush: js">
                            /** Write a program that calculates the factorial of a number. 
                                The factorial of a non-negative integer n is the product of all positive integers less than or equal to n. 
                                (i.e.  5! = 5 x 4 x 3 x 2 x 1 = 120). **/

                            // Enable / Disable button depending upon whether user has entered a value into the required input field.
                            function enableDisableButtons() {
                                if (document.getElementById("numberFactorial").value === "" ||
                                    !Number.isInteger(Number(document.getElementById("numberFactorial").value)) ||
                                    Number(document.getElementById("numberFactorial").value) < 0) {
                                    document.getElementById("btnFactorial").disabled = true;
                                } else {
                                    document.getElementById("btnFactorial").disabled = false;
                                }
                            }

                            // Determine factorial of user's number. 
                            function determineFactorial() {

                                // Establish variables.
                                var numberFactorial = document.getElementById("numberFactorial").value;
                                var factorialResult = 1;

                                // Compute factorial.
                                for (var i = 1; i <= Number(numberFactorial); i++) {
                                    factorialResult *= i;
                                }

                                // Display result to user.
                                document.getElementById("factorialResult").innerHTML = numberFactorial + "! = " + factorialResult;
                            }

                            // Reset the page.
                            function clearReset() {
                                document.getElementById("btnFactorial").disabled = true;
                                document.getElementById("numberFactorial").value = "";
