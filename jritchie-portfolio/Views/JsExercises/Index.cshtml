                    <div id="stringProcessingResult">&nbsp;</div>

                    <div style="border:4px double #009999; margin-top:20px">
                        <pre class="brush: js">
                        /** Write a JavaScript function that returns a passed string with letters in alphabetical order.  ex: mouse = emosu **/

                        // Alphabetize the letters in a string.
                        function processString() {

                            // Retrieve input value.
                            var stringToProcess = document.getElementById("stringToProcess").value;

                            // Determine whether user entered a string to test.
                            if (stringToProcess !== "") {

                                // Establish variables.
                                var stringArray = [];
                                var lowercaseArray = [];
                                var tempElementStringArray;
                                var tempElementFinalStringArray;

                                // Clear any existing result.
                                document.getElementById("stringProcessingResult").innerHTML = "";

                                // Convert user's string to arrays.
                                lowercaseStringArray = stringToProcess.toLowerCase().split("");
                                finalStringArray = stringToProcess.split("");

                                /** Sort the arrays. The lowercase array 'drives' the sort,
                                    the final array 'goes along for the ride'. **/
                                for (var j = 1; j <= lowercaseStringArray.length - 1; j++) {
                                    for (var i = 1; i <= lowercaseStringArray.length - 1; i++) {

                                        /** Examine the lowercase array and compare current array element with lower-indexed element. 
                                            Swap the two elements if the lower-indexed element has a higher ACSII-code value. **/
                                        if (lowercaseStringArray[i - 1] > lowercaseStringArray[i]) {

                                            // Swap the two elements in both arrays.
                                            tempElementStringArray = lowercaseStringArray[i - 1];
                                            tempElementFinalStringArray = finalStringArray[i - 1];

                                            lowercaseStringArray[i - 1] = lowercaseStringArray[i];
                                            finalStringArray[i - 1] = finalStringArray[i];

                                            lowercaseStringArray[i] = tempElementStringArray;
                                            finalStringArray[i] = tempElementFinalStringArray;
                                        }
                                    }
                                }

                                // Convert the sorted array back to a string and display it.
                                document.getElementById("stringProcessingResult").innerHTML = finalStringArray.join("");

                            } else {
                                // Remind user to first enter a string.
                                document.getElementById("stringProcessingResult").innerHTML = "Please enter a string to test.";
                            }
                        }

                        // Reset the page.
                        function clearResetAlphabetize() {
                            document.getElementById("stringToProcess").value = "";
                            document.getElementById("stringProcessingResult").innerHTML = "&nbsp;";
                        }
                        </pre>
